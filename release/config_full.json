{
  "Log": {
    // Cấu hình nhật ký cho Aiko-Server, độc lập với cấu hình nhật ký của mỗi Core
    "Level": "error",
    // Đường dẫn đầu ra cho nhật ký, mặc định sẽ xuất ra đầu ra chuẩn
    "Output": ""
  },
  "Cores": [
    {
      // Loại Core
      "Type": "sing",
      // Tên định danh cho Core, là tùy chọn, nếu cần khởi động nhiều core cùng loại thì phải khai báo
      "Name": "sing1",
      "Log": {
        // Cấu hình giống như phần nhật ký của SingBox
        "Level": "error",
        "Timestamp": true
      },
      "NTP": {
        // Cấu hình giống như phần NTP của SingBox
        // Đề xuất mở cho VMess VLESS
        "Enable": true,
        "Server": "time.apple.com",
        "ServerPort": 0
      },
      "DnsConfigPath": "/etc/Aiko-Server/dns.json",
      // Đường dẫn đến cấu hình gốc SingBox, để tham chiếu cấu hình chuẩn SingBox
      "OriginalPath": "/etc/Aiko-Server/sing_origin.json"
    },
    {
      "Type": "sing",
      "Name": "sing2",
      "Log": {
        // Cấu hình giống như phần nhật ký của Xray-core
        "Level": "info",
        "Timestamp": false
      }
    },
    {
      "Type": "xray",
      "Log": {
        // Cấu hình giống như phần nhật ký của Xray-core
        "Level": "error"
      },
      // Thư mục chứa tài nguyên tĩnh
      "AssetPath": "",
      // Đường dẫn tới cấu hình DNS
      "DnsConfigPath": "",
      // Đường dẫn tới cấu hình định tuyến
      "RouteConfigPath": "",
      // Cấu hình liên quan đến chính sách kết nối cục bộ
      "ConnectionConfig": {
        // Xem thêm tại https://xtls.github.io/config/policy.html#levelpolicyobject
      }
    }
  ],
  "Nodes": [
    {
      // Phương thức cấu hình Node 1
      "Name": "sing_node1",
      "Core": "sing",
      "CoreName": "sing1",
      // Địa chỉ API
      "ApiHost": "http://127.0.0.1",
      // Khóa bí mật cho API, hay còn gọi là Token
      "ApiKey": "test",
      // ID của Node
      "NodeID": 33,
      // Loại Node
      "NodeType": "shadowsocks",
      // Thời gian chờ cho yêu cầu
      "Timeout": 30,
      // IP lắng nghe
      "ListenIP": "0.0.0.0",
      // IP gửi
      "SendIP": "0.0.0.0",
      // Kích hoạt giao thức Proxy, xem thêm tại https://github.com/haproxy/haproxy/blob/master/doc/proxy-protocol.txt
      "EnableProxyProtocol": false,
      // Kích hoạt TCP Fast Open
      "EnableTFO": true,
      // Kích hoạt DNS
      "EnableDNS" : true,
      // Cài đặt chiến lược miền, yêu cầu kích hoạt DNS, mặc định là AsIS
      "DomainStrategy": "ipv4_only",
      // Cấu hình giới hạn
      "LimitConfig": {
        // Kích hoạt giới hạn số lượng kết nối thực sự và IP
        "EnableRealtime": false,
        // Giới hạn tốc độ người dùng
        "SpeedLimit": 0,
        // Giới hạn IP người dùng
        "IPLimit": 0,
        // Giới hạn số lượng kết nối của người dùng
        "ConnLimit": 0,
        // Kích hoạt giới hạn tốc độ động
        "EnableDynamicSpeedLimit": false,
        // Cấu hình giới hạn tốc độ động
      }
    },
    {
      // Phương thức cấu hình Node 2
      "ApiConfig": {
        "ApiHost": "http://127.0.0.1",
        "ApiKey": "test",
        "NodeID": 33,
        "Timeout": 30
      },
      "Options": {
        // Cấu hình tương tự như phần ControllerConfig của tệp cấu hình cũ
        "Core": "sing",
        "EnableProxyProtocol": true,
        "EnableTFO": true,
        "DomainStrategy": "ipv4_only"
        // Và nhiều lựa chọn khác
      }
    },
    {
      // Tham chiếu tới tệp cấu hình gốc
      "ConfigPath": "/etc/Aiko-Server/aiko.json"
    }
  ]
}